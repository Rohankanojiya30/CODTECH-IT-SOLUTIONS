import matplotlib.pyplot as plt
import numpy as np
categories = ['Category A', 'Category B', 'Category C', 'Category D']
values = np.random.randint(1, 100, size=len(categories))
plt.figure(figsize=(8, 5))
plt.bar(categories, values, color='skyblue')
plt.title('Bar Chart')
plt.xlabel('Categories')
plt.ylabel('Values')
plt.show()
plt.figure(figsize=(8, 5))
plt.pie(values, labels=categories, autopct='%1.1f%%', startangle=90, colors=['lightcoral', 'lightgreen', 'lightskyblue', 'lightyellow'])
plt.title('Pie Chart')
plt.show()
x_values = np.arange(len(categories))
plt.figure(figsize=(8, 5))
plt.plot(x_values, values, marker='o', linestyle='-', color='orange')
plt.title('Line Graph')
plt.xlabel('Categories')
plt.ylabel('Values')
plt.xticks(x_values, categories)
plt.show()
